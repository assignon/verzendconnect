# VerzendConnect Environment Variables
# Copy this file to .env and fill in your values

# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-a-strong-one
DEBUG=False
ALLOWED_HOSTS=verzendconnect.nl,www.verzendconnect.nl

# Database (PostgreSQL)
DB_NAME=verzendconnect
DB_USER=verzendconnect
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Email Settings (using Resend API)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
DEFAULT_FROM_EMAIL=VerzendConnect <noreply@verzendconnect.nl>
SERVER_EMAIL=VerzendConnect <noreply@verzendconnect.nl>
ADMIN_EMAIL=admin@verzendconnect.nl

# Note: Your domain must be verified in Resend dashboard
# Go to https://resend.com/domains to add and verify your domain

# Mollie Payment Gateway
MOLLIE_API_KEY=live_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Site Settings
SITE_NAME=VerzendConnect
SITE_URL=https://verzendconnect.nl

# Rental Settings
MIN_BEGIN_DATE=2
OVERDUE_NOTIFICATION_DAYS=2

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Sentry Error Tracking (optional but recommended)
SENTRY_DSN=https://xxxx@xxxx.ingest.sentry.io/xxxx
ENVIRONMENT=production
